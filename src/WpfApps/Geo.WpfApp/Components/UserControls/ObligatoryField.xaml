<UserControl x:Class="Geo.WpfApp.Components.UserControls.ObligatoryField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Geo.WpfApp.Components.UserControls"              
             mc:Ignorable="d" 
             Name="ObligatoryFieldName"
             d:DesignHeight="40" d:DesignWidth="300">
    <Border x:Name="Border" BorderThickness="3" VerticalAlignment="Stretch">
        <TextBox x:Name="textBox" TextChanged="textBox_TextChanged" FontSize="20" BorderThickness="0" VerticalContentAlignment="Center"/>
    </Border>
</UserControl>
